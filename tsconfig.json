{
    "compilerOptions":
    {
        "target": "ESNEXT",
        "module": "ESNEXT",
        "lib": ["es5", "es6", "es7", "esnext", "dom"],
        "noImplicitAny": false,
        "allowJs": false,
        "declaration": false,
        "declarationMap": false,
        "strict": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "typeRoots":
        [
            "node_modules/@types"
        ]
    },

    "exclude": ["node_modules"],

    "awesomeTypescriptLoaderOptions":
    {
        "useTranspileModule": true,
        "useBabel": true,
        "useCache": true,
        "cacheDirectory": ".hskcache",
        "forceIsolatedModules": true,
        "useWebpackText": true,
        "doTypeCheck": true,
        "forkChecker": true,
        "errorsAsWarnings": true,
        "ignoreDiagnostics": [1135, 2339]
    }
}
